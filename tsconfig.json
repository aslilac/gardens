{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "target": "esnext"
  },
  "include": [
    "./lib/*.ts",
    "./platform/*.ts"
  ],
  "typedocOptions": {
    "excludeNotExported": true,
    "ignoreCompilerErrors": true,
    "mode": "file",
    "out": "doc",
    "readme": "none",
    "theme": "minimal"
  }
}
